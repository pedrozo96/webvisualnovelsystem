<%= simple_form_for(@novel, :html => { :multipart => true }) do |f| %>
       <% if @novel.errors.any? %>
        <div id="errors">
            <h2> 
                <%= pluralize(@novel.errors.count, "error") %> 
                Prevented this novel from saving
            </h2>
            <ul>
                <% @novel.errors.full_messages.each do |msg| %>
                    <li> <%= msg %> </li>
                <% end %>
            </ul>
        </div>
      <% end %>

  <div class="field">
    <div class="control">
      <%= f.input :title, required: true, input_html: { class: 'input' }, wrapper: false, label_html: { class: "label" }, :label => "Titulo" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :description, required: true, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: "label" }, :label => "DescripciÃ³n" %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :build %>
    <%= f.file_field :build, multiple: true %>
  </div>

  <div class="form-group">
    <%= f.label :templatedata %>
    <%= f.file_field :templatedata, multiple: true %>
  </div>

  <div class="field">
    <div class="control">
      <%= f.button :submit, value: "#{f.object.new_record? ? 'Crear Novela' : 'Actualizar Novela'}", class:"button is-info" %>
    </div>
  </div>
  

<% end %>
