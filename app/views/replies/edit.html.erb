<div class="box">
<h1 class="title is-2 has-text-grey">Editar Respuesta</h1>
    <%= simple_form_for([@discussion, @reply]) do |f| %>
        <div class="field">
            <div class="control">
                <%= f.input :reply, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }, :label => 'Respuesta' %>
            </div>
        </div>

        <%= f.button :submit, 'Actualizar comentario', class: 'button is-info' %>
    <% end %>
</div>