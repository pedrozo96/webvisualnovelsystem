<div class="box">
<h1 class="title is-2">Temas</h1>

<% if has_role?(:admin) %>

<div class="level">
  <div class="level-left"></div>
  <div class="level-right">
    <%= link_to_focus_button_dark 'Nuevo Tema', new_channel_path, class:'' %>
  </div>
</div>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Tema</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @channels.each do |channel| %>
    <tr>
      <td><%= link_to channel.channel, channel %></td>
      <td>
        <div class="buttons is-right">
          <%= link_to 'Ver Tema', channel, class:'button' %>
          <%= link_to_focus_button 'Editar Tema', edit_channel_path(channel), class:'button' %>
          <%= link_to 'Borrar', channel, class:'button is-danger', method: :delete, data: { confirm: "Are you sure you want to delete this channel? " } %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>

<% else %> 
 <p class="has-text-center">Lo sentimos! No tienes acceso a esta p√°gina.</p>
<% end %>

</div>