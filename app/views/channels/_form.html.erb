<%= simple_form_for(@channel) do |f| %>
  <%= f.error_notification %>
  
 <div class="field">
   <div class="control">
     <%= f.input :channel, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }, :label => "Tema" %>
   </div>
 </div>

 <%= f.button :submit, value: "#{f.object.new_record? ? 'Crear Tema' : 'Actualizar Tema'}", class: 'button is-info' %>
<% end %>