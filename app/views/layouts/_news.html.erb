<div class="box">
    <h1 class="title is-3  has-text-grey-dark has-text-centered">Noticias</h1>
        <% @posts.each do |post| %>
            <div class="">
                <!--<%= image_tag  "avatar.png" %>-->
                <h2 class="title is-5 has-text-grey-dark "> <%= link_to post.title, post %> </h2>
                <p class="subtitle is-6 has-text-grey-light"> <%= post.created_at.strftime("%B, %d, %Y")%> </p>
            </div>
            <div class="bb-not-last pv10"></div>
        <% end %>

        <%= will_paginate @posts, previous_label: "Anterior", next_label: "Siguiente", :page_links => true, renderer: BulmaPagination::Rails, class: 'is-centered' %>
</div>

