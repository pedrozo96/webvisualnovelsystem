<div id="header">
    <% if current_page?(root_path) %>
        <p>Inicio</p>
    <% elsif current_page?(about_path) %>
        <p>Sobre nosotros</p>
    <% elsif current_page?(news_path) %>
        <p>Todos los Posts</p>
    <% elsif current_page?(novel_path) %>
        <p>Novelas</p>
    <% else %>
        <%= link_to "Volver al inicio", root_path %>
    <% end %>

    <% if user_signed_in? %>
        <div class="buttons">
            <button class="button">
                <%= link_to "Nuevo Post", new_post_path%></li>
            </button>
            <button class="button">
                Salir
            </button>
        </div>
    <% end %>

    <% if !user_signed_in? %>
        <div class="buttons">
            <%= link_to "Registrarte", new_user_registration_path, :class => "button" %>
            <%= link_to "Entrar", new_user_session_path, :class => "button" %>
        </div>
    <% end %>

</div>

<% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert")  %>
<% end %>